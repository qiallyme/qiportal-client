{
  "include": ["apps/**/*", "shared/**/*", "server/**/*", "packages/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["apps/client/src/*"],
      "@admin/*": ["apps/admin/src/*"],
      "@shared/*": ["shared/*"],
      "@ui/*": ["packages/ui/src/*"]
    }
  }
}
