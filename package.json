{
  "name": "qially-portal",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev:client": "pnpm -C apps/client dev",
    "dev:admin": "pnpm -C apps/admin dev",
    "dev:server": "pnpm -C server dev",
    "dev": "concurrently -k -n client,admin,server \"pnpm:dev:client\" \"pnpm:dev:admin\" \"pnpm:dev:server\"",
    "build": "pnpm -C apps/client build && pnpm -C apps/admin build && pnpm -C server build",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "5.6.3"
  }
}
